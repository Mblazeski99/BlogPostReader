<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ViewHeaderDataTemplate" DataType="{x:Type sys:String}">

        <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource PrimaryFontColorBrush}"
                Padding="0 0 0 15" Margin="0 0 0 16">

            <TextBlock FontWeight="Bold"
                       Text="{Binding }" 
                       FontSize="28" />

        </Border>

    </DataTemplate>
    
</ResourceDictionary>